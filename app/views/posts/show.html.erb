<div id="post_content" class="tab-content">

  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date" style="margin-top: 15px; margin-bottom: 15px;">
    Criado  a <%= time_ago_in_words(@post.created_at)%> Atrás</p>
    
    <% if @post.user == current_user %>
		| <%= link_to 'Editar', edit_post_path(@post) %> 
    | <%= link_to 'Deletar', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class:"text-danger" %>
  
    
	  <% end %>
  </p>

  <p class="body">
    <%= @post.body%>
  </p>

  <div id="comments my-10">
    <h2><%= @post.comments.count %> Comentários</h2>
    <%= render @post.comments %>
    <h3>Adicione um comentário:</h3>
    <%= render "comments/form" %>
  </div>
  
</div>