     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

   
    <div id="wrapper" class="active">  
      
     
       <div id="sidebar-wrapper">
          <ul id="sidebar_menu" class="sidebar-nav">
            <li class="sidebar-brand"><a id="menu-toggle" href="#">Menu<span id="main_icon" class="glyphicon glyphicon-align-justify"></span></a></li>
          </ul>
          <ul class="sidebar-nav" id="sidebar">
            
            <ul class="sidebar-nav text-light" id="sidebar">
              <% if user_signed_in? %>
                <li class="text-light">
                  <%= link_to new_post_path, class:"text-light" do  %>
                     + Novo post<span class="sub_icon glyphicon glyphicon-link"></span>
                  <% end %>
                  </li>
                
                  <li>  
                   <%= link_to   edit_user_registration_path, class:"text-light" do  %>
                     Editar Usu√°rio<span class="sub_icon glyphicon glyphicon-link"></span>
                  <% end %>
                  </li>
                <% else %>
                    <p class="px-5">Realize o seu login ou registresse para aproveitar todas as funcionalidades do blog</p>
                <% end %>


            </ul>
            
          </ul>
        </div>
     
      <div id="page-content-wrapper">
          <div class="row">
              <div class="col-md-12">
              <div class="well lead d-flex flex-row justify-content-between">
                
                <h2 class="display-6">Logo</h2>
                <div class="d-flex flex-row justify-content-center ">
                  <% if user_signed_in? %>
                    <p class="text-danger display-8">
                       
                        <%= button_to(
                        "Sair",
                        destroy_user_session_path,
                        class: "btn shadow-none text-danger h3 font-weight-bold",
                        method: :delete
                      ) %>
                    </p>
                  <% else %>
                    
                    <%= link_to "Cadastrar", new_user_registration_path,  class:"text-primary mx-4 text-decoration-none font-weight-bold"  %><br />
                     <%= link_to "Entrar", new_user_session_path,  class:"text-primary text-decoration-none font-weight-bold"  %><br />
                  <%  end  %>
                </div>
                 
                </div>
            
              <div class="container">
                <div class="row"> 
                      <p class="notice"><%= notice %></p> 
                      <p class="alert"><%= alert %></p>
                     <%= yield %>
                </div>
            </div>
            </div>
      </div>
       </div>
   
    
   


  </body>
</html>
