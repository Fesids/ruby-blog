<h1>Cadastrar</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres no minimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :confirme_sua_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions ">
    <%= f.submit "Cadastrar", class:"btn btn-success my-3"%>
  </div>

  <p class="text-primary">JÃ¡ tem uma conta?  <%= link_to "Entrar", new_user_session_path,  class:"text-primary text-decoration-none font-weight-bold"  %><br /></p>
<% end %>




 